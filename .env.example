# ===========================================
# WEARSEARCH - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# API CONFIGURATION
# ===========================================
# Development: /api/v1 (recommended with Vite proxy) or http://localhost:3000/api/v1
# Staging: https://api-staging.wearsearch.com/api/v1
# Production: https://api.wearsearch.com/api/v1
VITE_API_BASE_URL=/api/v1

# Development only: Proxy target for local API (used by Vite proxy)
VITE_API_PROXY_TARGET=http://localhost:3000

# ===========================================
# SUPABASE CONFIGURATION (Optional)
# ===========================================
VITE_SUPABASE_URL=
VITE_SUPABASE_PUBLISHABLE_KEY=
VITE_SUPABASE_PROJECT_ID=

# ===========================================
# APPLICATION METADATA
# ===========================================
VITE_APP_NAME=Wearsearch
VITE_APP_VERSION=0.1.0

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# ===========================================
# AUTH CONFIGURATION (Next.js)
# ===========================================
NEXT_PUBLIC_AUTH_COOKIE_MODE=true

# ===========================================
# PRODUCTION NOTES
# ===========================================
# For production deployment:
# 1. Set VITE_API_BASE_URL to your production API URL
# 2. Remove VITE_API_PROXY_TARGET
# 3. Update Supabase credentials if used
# 4. Set VITE_ENABLE_ANALYTICS=true if needed
# 5. Ensure .env is in .gitignore
