# ===========================================
# WEARSEARCH - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# API CONFIGURATION
# ===========================================
# Development: /api/v1 (recommended with Next.js rewrites) or http://localhost:3000/api/v1
# Staging: https://api-staging.wearsearch.com/api/v1
# Production: https://api.wearsearch.com/api/v1
NEXT_PUBLIC_API_URL=https://api.wearsearch.com
NEXT_PUBLIC_API_BASE_URL=/api/v1

# Development only: Proxy target for local API (used by Next.js rewrites)
API_PROXY_TARGET=http://localhost:3000

# ===========================================
# SUPABASE CONFIGURATION (Optional)
# ===========================================
# NEW: Use NEXT_PUBLIC_SUPABASE_ANON_KEY (preferred)
# Fallback: VITE_SUPABASE_PUBLISHABLE_KEY still works for legacy
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
VITE_SUPABASE_PUBLISHABLE_KEY=
VITE_SUPABASE_PROJECT_ID=

# ===========================================
# APPLICATION METADATA
# ===========================================
NEXT_PUBLIC_SITE_URL=https://wearsearch.com
NEXT_PUBLIC_GTM_ID=


# ===========================================
# AUTH CONFIGURATION (Next.js)
# ===========================================
NEXT_PUBLIC_AUTH_COOKIE_MODE=true

# ===========================================
# PRODUCTION NOTES
# ===========================================
# For production deployment:
# 1. Set NEXT_PUBLIC_API_BASE_URL to your production API URL
# 2. Remove API_PROXY_TARGET
# 3. Update Supabase credentials if used
# 4. Ensure .env is in .gitignore
